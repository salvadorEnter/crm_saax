<div class="relate-field-container">
    {{#if href}}
        <span class="ellipsis_inline" data-placement="bottom" title="{{value}}">
            <a href="{{href}}">{{value}}</a>
        </span>
        <span class="focus-icon-container hide">
            <span class="focus-icon"></span>
        </span>
    {{else}}
        {{value}}
    {{/if}}
</div>
